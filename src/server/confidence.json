{
  "api": {
    "server": {
      "port": 8080,
      "routes": {
        "cors": true
      }
    },
    "register": {
      "plugins": {
        "$filter": "env",
        "development": [
          "./app/shared/plugins/cors",
          "./app/shared/plugins/db",
          {
            "plugin": "./app/api",
            "options": {
              "routes": {
                "prefix": "/api"
              }
            }
          }
        ],
        "test": [
          "./app/shared/plugins/cors",
          "./app/shared/plugins/db-test",
          {
            "name": "./app/api",
            "options": {
              "routes": {
                "prefix": "/api"
              }
            }
          }
        ]
      },
    },
  },
  "admin": {
    "server": {
      "port": 8081
    },
    "register": {
      "plugins": {
        "$filter": "env",
        "development": [
          "./app/shared/plugins/cors",
          "./app/shared/plugins/db",
        ],
        "test": [
          "./app/shared/plugins/cors",
          "./app/shared/plugins/db-test",
        ]
      }
    }
  }
}
