{
  "api": {
    "server": {
      "port": 8080,
      "routes": {
        "cors": true
      }
    },
    "register": {
      "plugins": {
        "$filter": "env",
        "development": [
          "./app/shared/plugins/db",
          {
            "plugin": "hapi-auth-basic",
            "options": {
              "validate": "./app/shared/plugins/auth"
            }
          },
          {
            "plugin": "./app/api",
            "routes": {
              "prefix": "/api"
            }
          }
        ],
        "test": [
          "./app/shared/plugins/db-test",
          {
            "plugin": "hapi-auth-basic",
            "options": {
              "validate": "./app/shared/plugins/auth"
            }
          },
          {
            "plugin": "./app/api",
            "routes": {
              "prefix": "/api"
            }
          }
        ]
      },
    },
  },
  "admin": {
    "server": {
      "port": 8081
    },
    "register": {
      "plugins": {
        "$filter": "env",
        "development": [
          "./app/shared/plugins/db",
          {
            "plugin": "hapi-auth-basic",
            "options": {
              "validate": "./app/shared/plugins/auth"
            }
          },
        ],
        "test": [
          "./app/shared/plugins/db-test",
          {
            "plugin": "hapi-auth-basic",
            "options": {
              "validate": "./app/shared/plugins/auth"
            }
          },
        ]
      }
    }
  }
}
